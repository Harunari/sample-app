<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to full_name(micropost.user), micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <span>
    <div class="actions" style="white-space: nowrap">
      <% if current_user?(micropost.user) %>
          <%= link_to "delete", micropost, method: :delete,
                                          data: { confirm: "You sure?" } %>
      <% end %>
      <div class="favorite-btn">
        <% if current_user.favorite?(micropost) %>
          <%= form_for(micropost.favorites.find_by(micropost_id: micropost.id),
            html: { method: :delete }, remote: true) do |f| %>
            <%= f.submit "", class: "favorite"%>
          <% end %>
        <% else %>
          <%= form_for(micropost.favorites.build, remote: true) do |f| %>
            <div><%= hidden_field_tag :micropost_id, micropost.id %></div>
            <%= f.submit "", class: "not-favorite"%>
          <% end %>
        <% end %>
        <% fav_count = micropost.favorites.count %>
        <% if fav_count > 0 %>
          <div class="favorite-count">
            <%= micropost.favorites.count %>
          </div>
        <% end %>
      </div>
    </div>
  </span>
</li>
