<% provide(:title, 'All Messages') %>
<h1>All Messages</h1>

<%= will_paginate %>

<ul class="message_rooms">
    <%= render @message_rooms %>
</ul>

<%= will_paginate %>

<script type="text/javascript">
  $('.message_rooms').on('click', e => {
    let target = e.target;
    if (target.className === "gravatar"
    || target.className === "userName") { return; }
    let id = target.id;
    window.location.href = `../message_rooms/${id}`;
  });
</script>
